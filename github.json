{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "semanticCommitType": "ci",
      "groupName": "github actions",
      "automerge": true,
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ]
    },
    {
      "matchDataSource": "github-tags",
      "addLabels": ["dev dependencies"],
      "automerge": true,
      "semanticCommitType": "ci"
    }
  ]
}
