{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "*remix{/,}**"
      ],
      "automerge": true,
      "semanticCommitType": "fix",
      "groupName": "remix dependencies"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "prPriority": -100,
      "matchPackageNames": [
        "*remix{/,}**"
      ],
      "automerge": true,
      "semanticCommitType": "fix",
      "groupName": "remix dependencies"
    }
  ]
}
