{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "ignoreUnstable": false,
      "matchPackageNames": [
        "aws-cdk",
        "aws-cdk-lib",
        "constructs"
      ],
      "addLabels": [
        "runtime dependencies"
      ],
      "matchPackagePrefixes": [
        "@aws-cdk/",
        "aws-cdk-"
      ],
      "automerge": true,
      "groupName": "cdk dependencies"
    },
    {
      "matchPackageNames": [
      ],
      "matchPackagePrefixes": [
        "@aws-sdk/"
      ],
      "automerge": true,
      "groupName": "aws sdk dependencies"
    }
  ]
}
