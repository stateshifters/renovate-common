{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default configuration for Docker related tools",
  "docker-compose": {
    "automerge": false
  },
  "docker": {
    "automerge": false,
    "pinDigests": true
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "semanticCommitType": "chore",
      "matchUpdateTypes": [
        "pinDigest",
        "digest",
        "pin"
      ]
    }
  ]
}
