{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["gradle"],
      "automerge": true
    },
    {
      "matchDatasources": [ "gradle-version" ],
      "addLabels": ["dev dependencies"],
      "automerge": true,
      "semanticCommitType": "chore",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchDatasources": [ "gradle-version" ],
      "addLabels": ["dev dependencies"],
      "automerge": false,
      "semanticCommitType": "chore",
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
