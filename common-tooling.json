{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Common dev only tools that have no effect on the products",
  "packageRules": [
    {
      "automerge": true,
      "groupName": "local developer dependencies",
      "matchPackagePrefixes": [
        "@commitlint",
        "@jscpd"
      ],
      "matchPackageNames": [
        "@npmcli/package-json",
        "jscpd",
        "lefthook",
        "npmignore",
        "npm-run-all",
        "rimraf",
        "ts-node",
        "tsx",
        "wait-on"
      ]
    }
  ]
}
