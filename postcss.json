{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "automerge": true,
      "groupName": "postcss dependencies",
      "matchPackagePatterns": [
        ".*postcss.*",
        ".*autoprefixer.*",
        ".*cssnano.*"
      ],
      "addLabels": [
        "runtime dependencies"
      ]
    }
  ]
}
