{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "automerge": true,
      "groupName": "postcss dependencies",
      "matchPackageNames": [
        "*postcss*",
        "*postcss{/,}**",
        "*autoprefixer{/,}**",
        "*cssnano{/,}**"
      ],
      "addLabels": [
        "runtime dependencies"
      ]
    }
  ]
}
